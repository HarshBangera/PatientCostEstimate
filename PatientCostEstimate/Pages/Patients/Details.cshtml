@page
@model PatientCostEstimate.Pages.Patients.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Patient</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Patient.PatientName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Patient.PatientName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Patient.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Patient.DateOfBirth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Patient.Insurances)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Insurance Provider</th>
                    <th>Insurance Plan</th>
                    <th>Insurance ID</th>
                </tr>
                @foreach(var item in Model.Patient.Insurances)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.InsuranceProvider)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.InsurancePlan)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.InsuranceID)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Patient?.PatientID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
