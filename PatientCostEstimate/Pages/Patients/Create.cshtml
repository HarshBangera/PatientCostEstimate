@page
@using PatientCostEstimate.Models
@model PatientCostEstimate.Pages.Patients.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Patient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Patient.PatientName" class="control-label"></label>
                <input asp-for="Patient.PatientName" class="form-control" />
                <span asp-validation-for="Patient.PatientName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient.DateOfBirth" class="control-label"></label>
                <input asp-for="Patient.DateOfBirth" class="form-control" />
                <span asp-validation-for="Patient.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Insurance.InsuranceProvider" class="control-label"></label>
                <select asp-for="Insurance.InsuranceProvider" class="form-control">
                    <!option disabled selected value>--Select a Insurance Provider--</!option>
                    <option>HDFC</option>
                    <option>ICICI</option>
                    <option>SBI</option>
                    <option>Aditya Birla</option>
                    <option>TATA</option>
                </select>
                <span asp-validation-for="Insurance.InsuranceProvider" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Insurance.InsurancePlan" class="control-label"></label>
                <select asp-for="Insurance.InsurancePlan" 
                    class="form-control" 
                    asp-items="Html.GetEnumSelectList<InsurancePlanEnum>()">
                    <!option disabled selected value>--Select a Insurance Plan--</!option>
                </select>
                <span asp-validation-for="Insurance.InsurancePlan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Insurance.InsuranceID" class="control-label"></label>
                <input asp-for="Insurance.InsuranceID" class="form-control" />
                <span asp-validation-for="Insurance.InsuranceID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
