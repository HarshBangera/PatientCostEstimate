@page
@using PatientCostEstimate.Models
@model PatientCostEstimate.Pages.CostEstimate.IndexModel
@{
    ViewData["Title"] = "Cost Estimate";
}

<h1>Get Cost Estimate</h1>

<div class="row">

    <div class="col-md-4">
        <form asp-page="./Index" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PatientList[0].PatientName" class="control-label"></label>
                <select asp-for="CostEstimate.PatientId" asp-items="@(new SelectList(Model.PatientList, nameof(Patient.PatientID), nameof(Patient.PatientName)))" class="form-control">
                    <!option disabled selected value>--Select a Patient--</!option>
                </select>
                <span asp-validation-for="CostEstimate.PatientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceList[0].ServiceName" class="control-label"></label>
                <select asp-for="CostEstimate.ServiceId" asp-items="@(new SelectList(Model.ServiceList, nameof(Service.ServiceID), nameof(Service.ServiceName)))" class="form-control">
                    <!option disabled selected value>--Select a Service--</!option>
                </select>
                <span asp-validation-for="CostEstimate.ServiceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br/>
                <input type="submit" value="Get Cost Estimate" class="btn btn-primary" />
            </div>
        </form>
    </div>

</div>
